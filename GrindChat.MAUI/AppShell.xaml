<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GrindChat.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local2="clr-namespace:GrindChat.MAUI.Views"
    xmlns:local="clr-namespace:GrindChat.MAUI"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
    Title="User Management"
    ContentTemplate="{DataTemplate local2:UserSignUpView}"
    Route="UserSignUpView" />
    <ShellContent
    Title="Team Management"
    ContentTemplate="{DataTemplate local2:TeamView}"
    Route="Teams" />
    <ShellContent
    Title="User Details"
    ContentTemplate="{DataTemplate local2:UserDetailView}"
    Route="UserDetail" />
    <ShellContent
    Title="Team Details"
    ContentTemplate="{DataTemplate local2:TeamDetailView}"
    Route="TeamDetail" />
    <ShellContent
    Title="User Settings"
    ContentTemplate="{DataTemplate local2:UserSettingsView}"
    Route="UserSettingsView" />

</Shell>
